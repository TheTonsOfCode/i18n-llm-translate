{
  "name": "i18n-llm-translate",
  "version": "1.6.0",
  "description": "Automatically translates namespace-based JSON translation files across multiple languages from any source language",
  "main": "index.js",
  "scripts": {
    "build": "./build.sh",
    "publish": "./publish.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:engine:deepl": "TEST_ENGINES=deepl vitest run tests/engines/",
    "test:engine:openai": "TEST_ENGINES=openai vitest run tests/engines/",
    "test:engine:openai-4o": "TEST_ENGINES=openai-4o vitest run tests/engines/",
    "test:engine:claude": "TEST_ENGINES=claude vitest run tests/engines/",
    "test:engine:google": "TEST_ENGINES=google vitest run tests/engines/",
    "test:engine:dummy": "TEST_ENGINES=dummy vitest run tests/engines/",
    "test:engine:all": "TEST_ENGINES=* vitest run tests/engines/",
    "test:engines": "TEST_ENGINES=deepl,openai,claude,google vitest run tests/engines/",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "eslint src/ tests/ --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheTonsOfCode/i18n-auto-translate"
  },
  "keywords": [
    "i18n",
    "auto-translate",
    "translation",
    "json-translation",
    "localization",
    "multi-language",
    "namespace-translate",
    "intl",
    "translations",
    "language-automation",
    "auto-localization",
    "json-i18n"
  ],
  "author": "TheTonsOfCode",
  "license": "MIT",
  "dependencies": {
    "iso-639-1": "^3.1.5",
    "openai": "^4.89.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
